      {% elseif widget.acf_fc_layout == 'accordion' %}
        {% include 'widgets/accordion/accordion.twig' %}
      {% elseif widget.acf_fc_layout == 'banner' %}
        {% include 'widgets/banner/banner.twig' %}
      {% elseif widget.acf_fc_layout == 'frame' %}
        {% include 'widgets/frame/frame.twig' %}
