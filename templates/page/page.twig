{% extends "templates/base/base.twig" %}

{% block content %}
  <div class="lhl-page">
    {% for widget in post.meta('widgets') %}
      {% if widget.acf_fc_layout == 'hero' %}
        {% include 'widgets/hero/hero.twig' %}
